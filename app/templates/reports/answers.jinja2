{% extends 'base.jinja2' %}
{% block content %}
    <h2>Exam Answers Report for: {{ exam.title }}</h2>
    <a href="{{ url_for('reports.report_grades', exam_id=exam.id) }}" class="btn btn-primary">View Grades Report</a>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Student</th>
            <th scope="col">Answer</th>
            <th scope="col">Is Correct</th>
        </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ students[loop.index - 1].name }}</td>
                <td>{{ answer.text }}</td>
                <td>{{ 'Correct' if answer.is_correct else 'Incorrect' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
