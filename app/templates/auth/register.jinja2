{% extends "base.jinja2" %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center align-items-center" style="height:100vh">
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <!-- Flash messages display section -->
                        {% with messages = get_flashed_messages() %}
                            {% if messages %}
                                <div class="alert alert-warning">
                                    {% for message in messages %}
                                        {{ message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        {% endwith %}
                        <!-- End of Flash messages display section -->
                        <h2 class="text-center">Register</h2>
                        <form method="POST">
                            {{ form.hidden_tag() }}
                            {{ render_form(form) }}
                            <p class="text-center">Already have an account? <a href="{{ url_for('auth.login') }}">Login</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
